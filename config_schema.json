{
    "start_on_boot": {
        "type": "bool",
        "description": "Start Steam Beautifier with your computer?",
        "default": false
    },
    "launch": {
        "type": "bool",
        "description": "Launch Steam when Steam Beautifier starts? If starting on boot it's recommended to turn off Steam from starting on boot.",
        "default": false
    },
    "remove_whats_new": {
        "type": "bool",
        "description": "Remove What's New shelf?",
        "default": false
    },
    "bigpicture": {
        "type": "bool",
        "description": "Start Steam in Big Picture mode?",
        "default": false,
        "depends_on": "launch"
    },
    "download-images": {
        "type": "bool",
        "description": "Download missing grid art? (Requires API Keys)",
        "default": false
    },
    "steam_api_key": {
        "type": "str",
        "description": "Enter your Steam API Key",
        "url": "https://steamcommunity.com/dev/apikey",
        "link_text": "Get Steam API Key",
        "default": "",
        "depends_on": "download-images"
    },
    "steamgriddb_api_key": {
        "type": "str",
        "description": "Enter your SteamGridDB API Key",
        "url": "https://www.steamgriddb.com/profile/preferences",
        "link_text": "Get SteamGridDB API Key",
        "default": "",
        "depends_on": "download-images"
    },
    "steam_id": {
        "type": "str",
        "description": "Enter your SteamID64. Enter * for all users.",
        "url": "https://steamid.io/",
        "link_text": "Get SteamID64",
        "default": "*",
        "depends_on": "download-images"
    },
    "dropbox_sync": {
        "type": "bool",
        "description": "Sync your Steam grid images across devices with Dropbox?",
        "default": false
    },
    "dropbox_app_key": {
        "type": "str",
        "description": "Enter your Dropbox App Key",
        "url": "https://www.dropbox.com/developers/apps",
        "link_text": "Get Dropbox App Key",
        "default": "",
        "depends_on": "dropbox_sync"
    },
    "dropbox_app_secret": {
        "type": "str",
        "description": "Enter your Dropbox App Secret",
        "url": "https://www.dropbox.com/developers/apps",
        "link_text": "Get Dropbox App Secret",
        "default": "",
        "depends_on": "dropbox_sync"
    },
    "dropbox_authorization_token": {
        "type": "str",
        "description": "Enter your Dropbox Authorization Token",
        "url": "https://www.dropbox.com/oauth2/authorize?response_type=code&client_id={dropbox_app_key}&token_access_type=offline",
        "link_text": "Get Dropbox Authorization Token",
        "default": "",
        "depends_on": "dropbox_sync"
    }
}
